#!/usr/bin/env bash
set -e
if [[ ! -d "/Users/soranagano/ghq/github.com/s0r4d3v/zenn" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/Users/soranagano/ghq/github.com/s0r4d3v/zenn")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/Users/soranagano/ghq/github.com/s0r4d3v/zenn" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/Users/soranagano/ghq/github.com/s0r4d3v/zenn/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/Users/soranagano/ghq/github.com/s0r4d3v/zenn/.envrc" "/Users/soranagano/ghq/github.com/s0r4d3v/zenn/.direnv"/*.rc
